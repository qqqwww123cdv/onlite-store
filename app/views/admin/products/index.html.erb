<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
  <p> Hello <%= current_user.email%>, you are <%=current_user.role%></p>
  <%= link_to "sign out", destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to "sign in", new_user_session_path %>
<% end %> 

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Image</th>
      <th>Vendor code</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_products.each do |admin_product| %>
      <tr>
        <td><%= admin_product.product_name %></td>
        <% if admin_product.image.attached? == false %>
          <td><%= image_tag("plh.png", class: "max_img_width") %></td>
        <% else %>
          <td><%= image_tag(admin_product.image, class: "max_img_width")%></td>
        <% end %> 
        <td><%= admin_product.vendor_code %></td>
        <td><%= admin_product.price %>$</td>
        <td><%= admin_product.description %></td>
        <td><%= link_to 'Show', admin_product %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(admin_product) %></td>
        <td><%= link_to 'Destroy', admin_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_admin_product_path %>
