

<% @order_items.each do |item| %>
  <h5><%= item.product.product_name %></h5>
  <h5><%= item.product.price %></h5>
  <% if item.product.image.attached? == false %>
    <%= image_tag("plh.png", class: "max_img_width") %>
  <% else %>
    <%= image_tag(item.product.image, class: "max_img_width")%>
  <% end %>
  <h5><%= item.product.vendor_code %></h5>
  <h5><%= item.product.description %></h5>

  <%= form_for item, remote: true do |f| %>
    <%= f.hidden_field :product_id, :value => item.product.id %>
    <%= f.number_field :quantity, :value => item.quantity.to_i %>
    <%= f.submit "Update Card "%>
    <%= link_to "Remove Items", order_item_path(item), method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <h2>Subtotal: <%= item.total %></h2>
<% end %>

<% if current_order.order_items.size == 0 %> 
  <h4>The cart is empty</h4>
<% else %>
  <h1>Card subtotal: <%= current_order.subtotal %></h1>
  <%= link_to "Place an order",  new_checkout_path %>

<% end %>


<%= render 'form', checkout: @checkout %>

<%= link_to 'Back', checkouts_path %>
