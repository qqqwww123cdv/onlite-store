<% if @check.size == 0 %>
  <div class="container">
    <div class="marl">
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body cart">
              <h3>You have no orders</h3>
              <h4>Add something to make me happy :)</h4> 
              <%= link_to "Continue shopping",  root_path, class: "btn btn-primary cart-btn-transform mt-2"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <h1 class="text-center">My checkouts</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Number of order</th>
        <th>Email</th>
        <th>Name</th>
        <th>Total price</th>
        <th>Address</th>
        <th>Pick up</th>
        <th>User id</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @check.each do |checkout| %>
        <tr>
          <td><%= checkout.id %></td>
          <td><%= checkout.email %></td>
          <td><%= checkout.name %></td>
          <td><%= checkout.total_price %>$</td>
          <% if checkout.pick_up == true %>
            <td><%= checkout.address %></td>
          <% else %>
            <td> pickup </td>
          <% end %>
          <td><%= checkout.pick_up %></td>
          <td><%= checkout.user_id %></td>
          <td><%= link_to 'Show', checkout, class: "btn btn-outline-primary mt-2" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= link_to "Back",  root_path, class: "btn btn-outline-danger mt-2" %>
